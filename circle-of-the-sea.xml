  <!-- Circle of the Sea Archetype -->
  <element name="Circle of the Sea" type="Archetype" source="Circle of the Sea (Homebrew)" id="ID_HOMEBREW_ARCHETYPE_CIRCLE_OF_THE_SEA">
    <supports>Druid Circle</supports>
    <description>
      <p>Druids of the Circle of the Sea draw their power from the vast oceans, channeling fluid grace and aquatic mysticism. Their forms shift like tides, and their presence flows through battle like mist over waves.</p>
      <div element="ID_HOMEBREW_ARCHETYPE_FEATURE_CIRCLE_OF_THE_SEA_CIRCLE_SPELLS"/>
      <div element="ID_HOMEBREW_ARCHETYPE_FEATURE_CIRCLE_OF_THE_SEA_FLUID_FORM"/>
      <div element="ID_HOMEBREW_ARCHETYPE_FEATURE_CIRCLE_OF_THE_SEA_MISTSTEP"/>
      <div element="ID_HOMEBREW_ARCHETYPE_FEATURE_CIRCLE_OF_THE_SEA_DEEP_CURRENT"/>
      <div element="ID_HOMEBREW_ARCHETYPE_FEATURE_CIRCLE_OF_THE_SEA_ABYSSAL_CALM"/>
      <div element="ID_HOMEBREW_ARCHETYPE_FEATURE_CIRCLE_OF_THE_SEA_LEVIATHANS_WAKE"/>
    </description>
    <sheet display="false"/>
    <rules>
      <grant type="Archetype Feature" id="ID_HOMEBREW_ARCHETYPE_FEATURE_CIRCLE_OF_THE_SEA_CIRCLE_SPELLS" level="2"/>
      <grant type="Archetype Feature" id="ID_HOMEBREW_ARCHETYPE_FEATURE_CIRCLE_OF_THE_SEA_FLUID_FORM" level="2"/>
      <grant type="Archetype Feature" id="ID_HOMEBREW_ARCHETYPE_FEATURE_CIRCLE_OF_THE_SEA_MISTSTEP" level="2"/>
      <grant type="Archetype Feature" id="ID_HOMEBREW_ARCHETYPE_FEATURE_CIRCLE_OF_THE_SEA_DEEP_CURRENT" level="6"/>
      <grant type="Archetype Feature" id="ID_HOMEBREW_ARCHETYPE_FEATURE_CIRCLE_OF_THE_SEA_ABYSSAL_CALM" level="10"/>
      <grant type="Archetype Feature" id="ID_HOMEBREW_ARCHETYPE_FEATURE_CIRCLE_OF_THE_SEA_LEVIATHANS_WAKE" level="14"/>
    </rules>
  </element>

</elements>

<?xml version="1.0" encoding="utf-8" ?>
<elements>
    <!-- Homebrew Source -->
    <element name="Circle of the Sea (Homebrew)" type="Source" source="Homebrew" id="ID_HOMEBREW_CIRCLE_OF_THE_SEA">
        <description>
            <p>Druids of the Circle of the Sea draw their power from the oceans, channeling aquatic grace and mysticism.</p>
        </description>
        <file name="circle-of-the-sea.xml" url="https://raw.githubusercontent.com/ethanrbordeaux-jpg/aurora-homebrew/main/circle-of-the-sea.xml" />
    </element>

    <!-- Circle of the Sea Archetype -->
    <element name="Circle of the Sea" type="Archetype" source="Circle of the Sea (Homebrew)" id="ID_HOMEBREW_ARCHETYPE_CIRCLE_OF_THE_SEA">
        <supports>Druid Circle</supports>
        <description>
            <p>Druids of the Circle of the Sea channel the power of oceans, tides, and aquatic life.</p>
            <div element="ID_HOMEBREW_FEATURE_FLUID_FORM"/>
            <div element="ID_HOMEBREW_FEATURE_MISTSTEP"/>
            <div element="ID_HOMEBREW_FEATURE_DEEP_CURRENT"/>
            <div element="ID_HOMEBREW_FEATURE_ABYSSAL_CALM"/>
            <div element="ID_HOMEBREW_FEATURE_LEVIATHANS_WAKE"/>
        </description>
        <sheet display="false"/>
        <rules>
            <!-- Archetype Features -->
            <grant type="Archetype Feature" id="ID_HOMEBREW_FEATURE_FLUID_FORM" level="2"/>
            <grant type="Archetype Feature" id="ID_HOMEBREW_FEATURE_MISTSTEP" level="2"/>
            <grant type="Archetype Feature" id="ID_HOMEBREW_FEATURE_DEEP_CURRENT" level="6"/>
            <grant type="Archetype Feature" id="ID_HOMEBREW_FEATURE_ABYSSAL_CALM" level="10"/>
            <grant type="Archetype Feature" id="ID_HOMEBREW_FEATURE_LEVIATHANS_WAKE" level="14"/>

            <!-- Circle Spells -->
            <grant type="Spell" id="ID_PHB_SPELL_CREATE_OR_DESTROY_WATER" level="2" spellcasting="Druid"/>
            <grant type="Spell" id="ID_PHB_SPELL_FOG_CLOUD" level="2" spellcasting="Druid"/>
            <grant type="Spell" id="ID_PHB_SPELL_GUST_OF_WIND" level="3" spellcasting="Druid"/>
            <grant type="Spell" id="ID_PHB_SPELL_MIRROR_IMAGE" level="3" spellcasting="Druid"/>
            <grant type="Spell" id="ID_PHB_SPELL_TIDAL_WAVE" level="5" spellcasting="Druid"/>
            <grant type="Spell" id="ID_PHB_SPELL_WATER_BREATHING" level="5" spellcasting="Druid"/>
            <grant type="Spell" id="ID_PHB_SPELL_CONTROL_WATER" level="7" spellcasting="Druid"/>
            <grant type="Spell" id="ID_PHB_SPELL_FREEDOM_OF_MOVEMENT" level="7" spellcasting="Druid"/>
            <grant type="Spell" id="ID_PHB_SPELL_MAELSTROM" level="9" spellcasting="Druid"/>
            <grant type="Spell" id="ID_PHB_SPELL_CONE_OF_COLD" level="9" spellcasting="Druid"/>
        </rules>
    </element>

    <!-- Features -->
    <element name="Fluid Form" type="Archetype Feature" source="Circle of the Sea (Homebrew)" id="ID_HOMEBREW_FEATURE_FLUID_FORM">
        <description>
            <p>While Wild Shaped:</p>
            <ul>
                <li>Use Dexterity instead of Strength for natural attacks</li>
                <li>Beast form counts as unarmored for Monk features</li>
                <li>Bonus action unarmed strike after natural weapon attacks</li>
                <li>Retain Monk speed bonus and Step of the Wind</li>
            </ul>
        </description>
        <sheet>
            <description>Enhanced agility and precision while Wild Shaped.</description>
        </sheet>
    </element>

    <element name="Miststep" type="Archetype Feature" source="Circle of the Sea (Homebrew)" id="ID_HOMEBREW_FEATURE_MISTSTEP">
        <description>
            <p>As a bonus action, teleport up to 15 feet to a space adjacent to water or light obscurement (fog, steam, rain).</p>
            <p>Uses: Wisdom modifier per long rest (minimum 1).</p>
        </description>
        <sheet action="Bonus Action">
            <description>Teleport 15 feet to water or mist. Uses Wisdom modifier per long rest.</description>
        </sheet>
    </element>

    <element name="Deep Current" type="Archetype Feature" source="Circle of the Sea (Homebrew)" id="ID_HOMEBREW_FEATURE_DEEP_CURRENT">
        <description>
            <p>Use your reaction to redirect ranged attacks or spells targeting you or an ally within 30 feet to another creature.</p>
            <p>Uses: Wisdom modifier per long rest.</p>
        </description>
        <sheet action="Reaction">
            <description>Redirect ranged attacks or spells to another target. Uses Wisdom modifier per long rest.</description>
        </sheet>
    </element>

    <element name="Abyssal Calm" type="Archetype Feature" source="Circle of the Sea (Homebrew)" id="ID_HOMEBREW_FEATURE_ABYSSAL_CALM">
        <description>
            <p>You radiate a calming 10-foot aura: hostile creatures have disadvantage on charm/frighten saves; allies have advantage.</p>
        </description>
        <sheet>
            <description>10-foot aura: hostile creatures have disadvantage, allies have advantage on charm/frighten saves.</description>
        </sheet>
    </element>

    <element name="Leviathan's Wake" type="Archetype Feature" source="Circle of the Sea (Homebrew)" id="ID_HOMEBREW_FEATURE_LEVIATHANS_WAKE">
        <description>
            <p>Create a 30-foot line of crashing water (5ft wide). Dex save vs spell DC: fail 6d10 bludgeoning + prone, success half damage.</p>
            <p>Uses: 1 per long rest</p>
        </description>
        <sheet action="Action">
            <description>30-foot line of water: Dex save or 6d10 bludgeoning + prone. 1/long rest.</description>
        </sheet>
    </element>

</elements>
